{
  "name": "grafana-service",
  "version": "1.0.0",
  "description": "Grafana Service API Server - RESTful API with flexible JSON database",
  "main": "index.js",
  "bin": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "node index.js",
    "pm2:start": "pm2 start ecosystem.config.json",
    "pm2:start-dev": "pm2 start ecosystem.config.json --env development",
    "pm2:start-prod": "pm2 start ecosystem.config.json --env production",
    "pm2:stop": "pm2 stop grafana-service",
    "pm2:restart": "pm2 restart grafana-service",
    "pm2:reload": "pm2 reload grafana-service",
    "pm2:delete": "pm2 delete grafana-service",
    "pm2:logs": "pm2 logs grafana-service",
    "pm2:status": "pm2 status",
    "pm2:monit": "pm2 monit",
       "build": "pkg . --out-path dist",
    "build-win": "pkg . --targets node18-win-x64 --out-path dist",
    "build-linux": "pkg . --targets node18-linux-x64 --out-path dist", 
    "build-mac": "pkg . --targets node18-macos-x64 --out-path dist",
    "build-all": "pkg . --targets node18-win-x64,node18-linux-x64,node18-macos-x64 --out-path dist",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "pkg": {
    "assets": [
      "database.json",
      "config/**/*",
      "helpers/**/*",
      "routes/**/*"
    ],
    "outputPath": "dist",
    "targets": [
      "node18-win-x64",
      "node18-linux-x64", 
      "node18-macos-x64"
    ]
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "express": "^5.1.0"
  }
}
